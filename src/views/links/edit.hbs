<div class="container p-4">
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="card">
                <div class="card-body">
                    <form action="/links/edit/{{links.id}}" method="post">
                        <div class="form-group">
                            <input type="text" value="{{links.title}}" class="form-control" name="title" placeholder="Title" autofocus>
                        </div>

                        <div class="form-group">
                            <input type="url" name="url" value="{{links.url}}" class="form-control" placeholder="URL">
                        </div>

                        <div class="form-group">
                            <textarea name="description" rows="2" class="form-control" placeholder="Description" >{{links.description}} </textarea>
                        </div>

                        <div class="form-group">
                            <button class="btn btn-success w-100">
                                Save
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>